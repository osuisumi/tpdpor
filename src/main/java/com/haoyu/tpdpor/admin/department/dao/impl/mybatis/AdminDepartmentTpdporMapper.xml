		  	VR1.REGIONS_NAME CITY_NAME,
		  	VR2.REGIONS_NAME COUNTY_NAME -->
		from
			DEPARTMENT D
		left join VIEW_REGIONS VR on VR.REGIONS_CODE = D.PROVINCE
		left join VIEW_REGIONS VR1 on VR1.REGIONS_CODE = D.CITY
		left join VIEW_REGIONS VR2 on VR2.REGIONS_CODE = D.COUNTIES
		where D.IS_DELETED = 'N'
 		<if test="deptNameEquals != null and deptNameEquals != ''">
			and D.DEPT_NAME = #{deptNameEquals}
		</if>
		<if test="deptName != null and deptName != ''">
